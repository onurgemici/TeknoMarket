@model IEnumerable<CarouselImage>
@{
    ViewData["Title"] = "Tanıtım Görselleri";
}

<partial name="_ToolbarPartial" />

<div class="row row-cols-1 row-cols-md-2 g-2">
    @foreach (var carouselImage in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@carouselImage.Image" class="card-img-top" />
                <div class="card-body">
                    <div class="d-flex">
                        <div class="d-flex gap-2 flex-fill">
                            @if (carouselImage.DateFirst is not null)
                            {
                                @carouselImage.DateFirst!.Value.ToShortDateString()
                            }
                            @if (carouselImage.DateFirst is not null && carouselImage.DateEnd is not null)
                            {
                                <div>-</div>
                            }
                            @if (carouselImage.DateEnd is not null)
                            {
                                @carouselImage.DateEnd!.Value.ToShortDateString()
                            }
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@carouselImage.Id" class="btn btn-warning">
                                <i class="bi bi-pen"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@carouselImage.Id" class="btn btn-danger remove-btn">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/admin.js"></script>
}