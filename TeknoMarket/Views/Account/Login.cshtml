@model LoginViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Giriş Yap";
}


<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-12">
            <div class="form-block mx-auto">
                <a class="navbar-brand d-flex flex-column  justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Index">

                    <img src="~/lib/images/logo.png" style="height:8rem;" alt="TEKNOMARKT" />
                </a>
                <hr />
                <div class="text-center mb-3">

                    <h3 >GİRİŞ YAP </h3>
                </div>
                <form action="#" method="post">
                    <div class="form-group first">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group last mb-2">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-sm-flex mb-2 align-items-center">
                        <label class="control control--checkbox mb-3 mb-sm-0">
                            <span class="caption">Remember me</span>
                            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                            <div class="control__indicator"></div>
                        </label>
                        <span class="ml-auto"><a asp-area="" asp-controller="Account" asp-action="ResetPassword" class="forgot-pass">Parolamı Unuttum</a></span>
                    </div>

                    <input type="submit" value="GİRİŞ YAP" class="btn btn-block py-2 btn-primary">

                    <span class="text-center my-3 d-block">ya da</span>

                    <a class="btn btn-block py-2 btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Register">KAYIT OL</a>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}