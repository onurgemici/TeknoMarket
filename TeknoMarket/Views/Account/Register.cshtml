    @model RegisterViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Kayıt Ol";
}


<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-12">
            <div class="form-block mx-auto">
                <a class="navbar-brand d-flex flex-column  justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Index">

                    <img src="~/lib/images/logo.png" style="height:3rem;" alt="TEKNOMARKT" />
                </a>
                <hr />
                <div class="text-center mb-1">

                    <h3 >KAYIT OL </h3>
                </div>
                <form action="#" method="post">
                    <div class="form-group first">
                        <label class="form-label" asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="e-posta adresinizi yazınız..." />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group last mb-2">
                        <label class="form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" placeholder="adınızı ve soyadınızı yazınız..." />
                        <span asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group last mb-2">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" placeholder="parolanızı yazınız..." />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group last mb-2">
                        <label class="form-label" asp-for="PasswordCheck"></label>
                        <input class="form-control" asp-for="PasswordCheck" placeholder="parolanızı tekrar yazınız..." />
                        <span asp-validation-for="PasswordCheck"></span>
                    </div>

                    <div class="d-sm-flex mb-2 align-items-center">
                       
                        <span class="ml-auto"><a asp-area="" asp-controller="Account" asp-action="ResetPassword" class="forgot-pass">Parolamı Unuttum</a></span>
                    </div>

                    <input type="submit" value="KAYIT OL" class="btn btn-block py-2 btn-primary">
                   
                    <span class="text-center my-3 d-block">Zaten üye misiniz?</span>

   
                    <a class="btn btn-block py-2 btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Login">GİRİŞ YAP</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}