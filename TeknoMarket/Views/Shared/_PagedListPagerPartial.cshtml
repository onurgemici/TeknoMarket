
<nav>
    <ul class="pagination">
        @if (!Model.IsFirstPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="1">
                    <i class="bi bi-chevron-double-left"></i>

                </a>
            </li>
        }
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(Model.PageNumber - 1)">
                    <i class="bi bi-chevron-left"></i>

                </a>
            </li>
        }
        @if (Model.PageNumber > 5)
        {
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
        }
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i > Model.PageNumber - 5 && i < Model.PageNumber + 5)
            {
                if (i == Model.PageNumber)
                {
                    <li class="page-item active">
                        <a class="page-link" asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-page="@i">@i</a>
                    </li>
                }
            }

        }
        @if (Model.PageNumber < Model.PageCount - 5)
        {
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(Model.PageNumber + 1)">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        }
        @if (!Model.IsLastPage)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@Model.PageCount">
                    <i class="bi bi-chevron-double-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>